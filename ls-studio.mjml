<mjml>
  <mj-head>
    <mj-font
      name="Montserrat"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
    />

    <mj-attributes>
      <mj-text align="center" font-family="Montserrat" font-size="16px" line-height="1.4" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <!-- header -->
    <mj-section background-color="white">
      <mj-column>
        <mj-image
          src="https://raw.githubusercontent.com/nrjdalal/xmail/main/assets/ls-studio-logo.png"
          alt=""
          width="128px"
        />
      </mj-column>
    </mj-section>

    <mj-section background-color="white">
      <mj-column>
        <mj-text color="#14B8A6" font-size="18px" font-weight="600"> WE PROVIDE INNOVATIVE SERVICES </mj-text>
        <mj-text> Interactive virtual tours for you! </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="black"> </mj-section>

    <mj-section background-color="white">
      <mj-column>
        <mj-text color="#14B8A6" font-size="18px" font-weight="600">
          We provide scanning, photography and interactive virtual tours for your business and more.
        </mj-text>
        <mj-text> You've come to the right place. </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="white">
      <mj-column width="180px">
        <mj-image
          src="https://raw.githubusercontent.com/nrjdalal/xmail/main/assets/ls-studio-1.png"
          alt=""
          width="64px"
        />
        <mj-text> Professional Photography </mj-text>
      </mj-column>

      <mj-column width="180px">
        <mj-image
          src="https://raw.githubusercontent.com/nrjdalal/xmail/main/assets/ls-studio-2.png"
          alt=""
          width="64px"
        />
        <mj-text> Virtual Reality Tours </mj-text>
      </mj-column>

      <mj-column width="180px">
        <mj-image
          src="https://raw.githubusercontent.com/nrjdalal/xmail/main/assets/ls-studio-3.png"
          alt=""
          width="64px"
        />
        <mj-text> Floorplans and EPCs </mj-text>
      </mj-column>

      <mj-column width="180px">
        <mj-image
          src="https://raw.githubusercontent.com/nrjdalal/xmail/main/assets/ls-studio-4.png"
          alt=""
          width="64px"
        />
        <mj-text> 3D space capture </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
